<h1>New Advertisement</h1>

<div class="row">
  <div class="col-md-4">
    <p>Gotta make that money, son</p>
  </div>
  <div class="col-md-8">
    <%= form_for @advertisement do |ad| %>
    <div class="form-group">
      <%= ad.label :title %>
      <%= ad.text_field :title, class: 'form-control', placeholder: "Enter Ad title" %>
    </div>
    <div class="form-group">
      <%= ad.label :copy %>
      <%= ad.text_area :copy, class: 'form-control', placeholder: "Enter Ad copy" %>
    </div>
    <div class="form-group">
      <%= ad.label :price %>
      <%= ad.number_field :price, class: 'form-control', placeholer: "CASH MONEY!" %>
    </div>
    <div class="form-group">
      <%= ad.submit "Save", class: 'btn btn-success' %>
    </div>
    <% end %>
  </div>
</div>
